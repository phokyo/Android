<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wolfs.proyecto002.MainActivity"
    android:id="@+id/constraintLayout"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/et1"
        android:layout_width="217dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Ingrese el primer valor"
        android:inputType="number"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Ingrese el segundo valor"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/et1"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/et1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/et1" />

    <Button
        android:id="@+id/btnsumar"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="sumar"
        android:text="Sumar"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/et2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="Resultado"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginStart="18dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btnsumar"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/btnsumar"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="0dp" />
</android.support.constraint.ConstraintLayout>
